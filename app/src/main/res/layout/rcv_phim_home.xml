<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="phim"
            type="com.base.moviebooking.entity.Phim" />
    </data>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/roundedCorners"
                android:src="@drawable/phim2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:background="@drawable/bg_rate_phim">


                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="20dp"
                        android:background="#342C2929"
                        android:layout_marginStart="18dp"
                        android:src="@drawable/star2"
                        app:tint="#FF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.7"
                        android:textColor="#fff"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_c13"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:text="C13" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tvtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@{phim.tenphim}"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"

            />


    </LinearLayout>
</layout>
