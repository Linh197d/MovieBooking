<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"

            >
            <ImageView
                android:id="@+id/back_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgUser"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/circle"
                android:src="@drawable/user2"
                android:background="@color/colorGrey"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:id="@+id/pickImage"
                android:layout_height="50dp"
                android:src="@drawable/ic_camera"
                android:background="@color/colorWhite"
                app:shapeAppearanceOverlay="@style/circle"
                android:tint="@color/colorOrange"
                android:layout_gravity="end|bottom"

                />


        </FrameLayout>
        <EditText
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:text="Dao Linh"
            android:textSize="18sp"
            android:background="@color/colorTextGrey"
            style="@style/roundedCorners"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/phoneuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="0971390602"
            android:textSize="18sp"
            android:background="@color/colorGrey"
            style="@style/roundedCorners"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/birthday_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="04/06/2002"
            android:textSize="18sp"
            android:editable="false"
            android:background="@color/colorGrey"
            style="@style/roundedCorners"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/gmail_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="linh197d@gmail.com"
            android:textSize="18sp"
            android:background="@color/colorGrey"
            style="@style/roundedCorners"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Ha Noi"
            android:textSize="18sp"
            android:background="@color/colorGrey"
            style="@style/roundedCorners"
            android:padding="5dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <RadioButton
                android:id="@+id/nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                />
            <RadioButton
                android:id="@+id/nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Nữ"
                />
        </RadioGroup>
        <Button
            android:id="@+id/btnCapnhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:textColor="@color/yellow"
            android:layout_gravity="end|bottom"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</layout>
